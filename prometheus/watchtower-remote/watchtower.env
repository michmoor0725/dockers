# Update behavior
WATCHTOWER_SCHEDULE=0 30 4 * * *      # 03:30 AM daily
WATCHTOWER_CLEANUP=true
WATCHTOWER_ROLLING_RESTART=true
WATCHTOWER_STOP_TIMEOUT=120s
WATCHTOWER_REVIVE_STOPPED=true

# Remote Monitoring
DOCKER_HOST=tcp://192.168.70.26:2375

# ------------------------------------------------------------------------
# HTTP API + Prometheus metrics
# ------------------------------------------------------------------------
WATCHTOWER_HTTP_API_UPDATE=true        # enable HTTP API
WATCHTOWER_HTTP_API_TOKEN=SuperSecret123
WATCHTOWER_HTTP_API_PERIODIC_POLLS=true  # continue scheduled scans
WATCHTOWER_HTTP_API_METRICS=true       # expose Prometheus metrics on /v1/metrics
# optional if you want to bind to a custom address or port
# WATCHTOWER_HTTP_API_PORT=8080

# ------------------------------------------------------------------------
# Notifications (disabled by default)
# Uncomment & configure one if needed
# ------------------------------------------------------------------------
# WATCHTOWER_NOTIFICATIONS=slack
# WATCHTOWER_NOTIFICATION_SLACK_HOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ
# WATCHTOWER_NOTIFICATION_TITLE_TAG=prod

# ------------------------------------------------------------------------
# Misc
# ------------------------------------------------------------------------
WATCHTOWER_NO_STARTUP_MESSAGE=true
# WATCHTOWER_DEBUG=true


WATCHTOWER_NOTIFICATIONS=email

